@using System.Globalization
@using AddResourcessF.PaymentMethod

@model PaymentMethodDTOs

<div class="card">
    <div class="card-body">
        <h4 class="card-title">@PaymentMethodS.PaymentMethod</h4>
        <p class="card-description">@PaymentMethodS.DataTableTitle</p>
        <form class="forms-sample"
              method="post" enctype="multipart/form-data"
              asp-controller="PaymentMethod" asp-action="Save" role="form">

            <input asp-for="Id" type="hidden" />


            <div class="form-group">
                <label for="exampleInputName1">@PaymentMethodS.MethodAname</label>
                <input asp-for="MethdAname" type="text" class="form-control" id="exampleInputName1" placeholder="@PaymentMethodS.MethodAname">
                <span asp-validation-for="MethdAname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="exampleInputName1">@PaymentMethodS.MethodEname</label>
                <input asp-for="MethodEname" type="text" class="form-control" id="exampleInputName1" placeholder="@PaymentMethodS.MethodEname">
                <span asp-validation-for="MethodEname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="exampleInputName1">@PaymentMethodS.Commission</label>
                <input asp-for="Commission" type="text" class="form-control" id="exampleInputName1" placeholder="@PaymentMethodS.Commission">
                <span asp-validation-for="Commission" class="text-danger"></span>
            </div>

         

      

            <button type="submit" formmethod="post" class="btn btn-gradient-primary me-2">@PaymentMethodS.Save</button>
            <button class="btn btn-light">@PaymentMethodS.Cansel</button>
        </form>
    </div>
</div>





